<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TesteTecnicoWK_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TesteTecnicoWK_Web.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/jquery-3.6.1.min.js" type="text/javascript"></script>
</head>
<body>
    <header>

        <div class="container-fluid">
            <h2>Tiago Almeida Brasil</h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class=" row">
                <div class="col-md-1 col-sm-1 col-xs-1">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-success" asp-area="" asp-controller="ProdutosView" asp-action="Index">Produtos</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-1">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-danger" asp-area="" asp-controller="CategoriasView" asp-action="Index">Categoria</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container" style="padding-top:3%">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
