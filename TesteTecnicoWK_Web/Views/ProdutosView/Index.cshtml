@model IEnumerable<TesteTecnicoWK_Web.Models.ProdutosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar produto</a>
</p>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
            </div>
            <div class="box-content">
                <div class="alert alert-info"><h3>Index - Lista de produtos cadastrados</h3></div>
                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Preço</th>
                            <th>Tipo</th>
                            <th>Estoque</th>
                            <th>Categoria</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Preco)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tipo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estoque)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoriaId)
                                </td>
                                <td class="center">
                                    <a class="btn btn-success" href="@Url.ActionLink("Edit", "ProdutosView", new { id = item.Id })">
                                        Editar
                                    </a>
                                     | 
                                    <a class="btn btn-info" href="@Url.ActionLink("Details", "ProdutosView", new { id = item.Id })">
                                        Detalhes
                                    </a>
                                     | 
                                    <a class="btn btn-danger" href="@Url.ActionLink("Delete", "ProdutosView", new { id = item.Id })">
                                        Deletar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
